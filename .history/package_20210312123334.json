{
  "name": "workshops-ipa",
  "version": "1.0.0",
  "description": "react webapp to schedule and participate in workshops",
  "author": "Oliver Dietsche",
  "scripts": {
    "build": "next build",
    "build-storybook": "build-storybook --no-dll",
    "cz": "git-cz",
    "dev": "next dev",
    "lint": "npm run lint:js",
    "lint:js": "eslint .",
    "prettier": "prettier --write \"**/*.*(js|jsx|ts|tsx|json|md)\"",
    "start": "next start",
    "storybook": "start-storybook -p 6006 --no-dll",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  
  "config": {
    "commitizen": {
      "path": "@namics/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@emotion/react": "11.1.4",
    "@material-ui/core": "4.11.2",
    "next": "10.0.5",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/preset-react": "7.12.10",
    "@commitlint/cli": "12.0.1",
    "@emotion/babel-plugin": "11.1.2",
    "@namics/commitlint-conventional-changelog": "1.2.1",
    "@namics/cz-conventional-changelog": "2.0.2",
    "@namics/eslint-config": "9.0.5",
    "@namics/prettier-config": "2.0.0",
    "@namics/ts-config": "1.1.0",
    "@storybook/addon-actions": "6.1.14",
    "@storybook/addon-essentials": "6.1.14",
    "@storybook/addon-links": "6.1.14",
    "@storybook/react": "6.1.14",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.20",
    "@types/react": "17.0.0",
    "@typescript-eslint/parser": "4.13.0",
    "babel-loader": "8.2.2",
    "commitizen": "4.2.3",
    "eslint": "7.17.0",
    "eslint-plugin-import": "2.22.1",
    "husky": "4.3.7",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  }
}
